<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rvly_root"
    android:background="#1A000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_body"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerInParent="true"
        android:layout_width="360dp"
        android:layout_height="300dp">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/close_figma"
                    android:layout_marginStart="16dp"
                    />
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Verification Sent !"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/quicksand_bold"
                    />



            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/quicksand_regular"
                    android:gravity="center"
                    android:text="cubycode you should add only what you need. Remove it and add what dependency is necessary"

                    android:textColor="@color/black"
                    android:textSize="14sp" />



            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rv_action"
                android:layout_marginTop="50dp"
                android:layout_width="85dp"
                android:layout_height="35dp"
                android:layout_below="@+id/rv_desc"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_rounded">

                <TextView
                    android:id="@+id/tv_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/roboto_regular"
                    android:text="OKE"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    />

            </RelativeLayout>



        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>