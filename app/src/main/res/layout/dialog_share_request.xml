<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rvly_root"
    android:background="#E6000000">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_body"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerInParent="true"
        android:layout_width="360dp"
        android:layout_height="250dp">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ln_title"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ic_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/close_figma"
                    android:layout_marginStart="16dp"
                    />
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bagikan Permintaan ini"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/quicksand_bold"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ln_title"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:id="@+id/ln_whatsapp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_whatsapp"
                        />
                    
                    <TextView
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bagikan ke Whatsapp"
                        android:fontFamily="@font/quicksand_regular"
                        android:textColor="@color/black"
                        />



                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ln_email"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:src="@drawable/ic_email"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                    <TextView
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bagikan ke EMAIL"
                        android:fontFamily="@font/quicksand_regular"
                        android:textColor="@color/black"
                        />



                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ln_url"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:src="@drawable/ic_copy"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                    <TextView
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Copy Link URL"
                        android:fontFamily="@font/quicksand_regular"
                        android:textColor="@color/black"
                        />



                </LinearLayout>




            </LinearLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>