<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile"
            android:src="@drawable/default_profile"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <TextView
            android:id="@+id/tv_name"
            android:text="Mochamad Rezza Gumilang"
            android:fontFamily="@font/roboto_medium"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="25dp"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_product"
                android:scaleType="centerCrop"
                android:src="@drawable/product_dummy"
                android:layout_width="match_parent"
                android:layout_height="218dp"/>

            <TextView
                android:id="@+id/tv_productName"
                android:text="Milky way Rabbit Mug"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_category"
                android:text="Ceramic"
                android:fontFamily="@font/roboto_light"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.rzc.isibox.presentation.component.MyRelativeLayout
                app:m_color="#EEF8FF"
                app:m_radius="3"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_description"
                    android:text="nyabar gelas keramik yang unik, tawarin aja kalau ada"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="13sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.rzc.isibox.presentation.component.MyRelativeLayout>
            <LinearLayout
                android:weightSum="9"
                android:layout_marginStart="10dp"
                android:paddingTop="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Metrics"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_metric"
                        android:text="Units"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:layout_gravity="center_vertical"
                    android:background="@color/grey"
                    android:layout_width="1dp"
                    android:layout_height="15dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Quantity"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_qty"
                        android:text="0"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:layout_gravity="center_vertical"
                    android:background="@color/grey"
                    android:layout_width="1dp"
                    android:layout_height="15dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Target Price"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_price"
                        android:text="Rp. 0"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/grey3"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_created"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/btn_detail"
                    android:text="Created:  12 September 2023"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/iv_flag"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/flag_indonesia"
                    android:layout_below="@+id/tv_created"
                    android:layout_alignStart="@+id/tv_created"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_toEndOf="@+id/iv_flag"
                    android:layout_alignTop="@+id/iv_flag"
                    android:text="Jakarta Utara, DKI Jakarta"
                    android:fontFamily="@font/roboto_light"
                    android:textSize="13sp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/black"
                    android:layout_toStartOf="@+id/btn_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.rzc.isibox.presentation.component.MyButton
                    android:id="@+id/btn_detail"
                    android:layout_alignParentEnd="true"
                    android:layout_width="120dp"
                    android:layout_height="40dp"/>
            </RelativeLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>