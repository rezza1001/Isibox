<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.rzc.isibox.presentation.component.MyRelativeLayout
        android:id="@+id/rv_body"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:m_color="@color/white"
        app:m_radius="5"
        app:mLineSize="1"
        app:mLineColor="@color/primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ln_label"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_label"
                android:text="Nomor Mobo"
                android:fontFamily="@font/roboto_bold"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />
            <com.rzc.isibox.presentation.component.MyLinearLayout
                android:id="@+id/ln_main"
                app:m_color="@color/primaryLight"
                app:m_radius="15"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp">

                <TextView
                    android:id="@+id/tv_primary"
                    android:text="Utama"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@drawable/ic_checklist"
                    android:layout_marginStart="5dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:tint="@color/white" />

            </com.rzc.isibox.presentation.component.MyLinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_phone"
            android:text="0867888811"
            android:fontFamily="@font/roboto_regular"
            android:textSize="13sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/grey1"
            android:layout_below="@+id/ln_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_address"
            android:text="0867888811"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/grey1"
            android:layout_below="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_note"
            android:text="Note Here"
            android:textStyle="italic"
            android:textColor="@color/orangeDark"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="5dp"
            android:layout_below="@id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_below="@id/tv_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.rzc.isibox.presentation.component.MyRelativeLayout
                android:id="@+id/rv_change"
                app:m_radius="5"
                app:m_color="@color/primaryLight"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="35dp">

                <TextView
                    android:text="Ubah Alamat"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </com.rzc.isibox.presentation.component.MyRelativeLayout>
            <com.rzc.isibox.presentation.component.MyRelativeLayout
                android:id="@+id/rv_more"
                app:m_radius="5"
                app:m_color="@color/grey"
                android:layout_marginStart="5dp"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="35dp">
                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@drawable/more_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tint="@color/grey1" />
            </com.rzc.isibox.presentation.component.MyRelativeLayout>

        </LinearLayout>

    </com.rzc.isibox.presentation.component.MyRelativeLayout>



</RelativeLayout>