<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_isibox_white"
            android:layout_marginBottom="20dp"
            android:layout_width="150dp"
            android:layout_height="60dp"/>

        <TextView
            android:text="@string/create_your_free_account"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:textColorHint="@color/grey"
            android:hint="Email"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>

        <EditText
            android:textColorHint="@color/grey"
            android:hint="Phone"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:inputType="phone"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>
        <EditText
            android:textColorHint="@color/grey"
            android:hint="Password"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:inputType="textPassword"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>

        <com.rzc.isibox.presentation.component.MyButton
            android:id="@+id/btn_signup"
            android:layout_marginTop="20dp"
            android:layout_marginStart="23dp"
            android:layout_marginEnd="23dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <TextView
            android:text="@string/sign_up_with"
            android:fontFamily="@font/roboto_regular"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="7dp"
                android:background="@color/white"
                android:src="@drawable/ic_google"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="35dp">
            <TextView
                android:text="@string/do_you_already_have_an_account"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_signIn"
                android:text="Sign In"
                android:fontFamily="@font/roboto_bold"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_checkbox"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="@color/white" />
            <TextView
                android:text="@string/term_isibox_info"
                android:fontFamily="@font/roboto_light"
                android:textSize="13sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="@string/terms_of_service"
                android:layout_marginStart="3dp"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:fontFamily="@font/roboto_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="@string/and"
                android:fontFamily="@font/roboto_light"
                android:textSize="13sp"
                android:layout_marginStart="5dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:text="@string/privacy_policy"
            android:layout_marginStart="30dp"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>




</RelativeLayout>