<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bkg_editext"
        android:digits="1234567890qwertyuiopasdfghjklzxcvbnm QWERTYUIOPASDFGHJKLZXCVBNM."
        android:fontFamily="@font/roboto_medium"
        android:hint="Hint here.."
        android:minHeight="40dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="#043238"
        android:textColorHint="#33043238"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/rv_icRight"
        android:layout_alignTop="@+id/et_name"
        android:layout_alignBottom="@+id/et_name"
        android:layout_alignParentEnd="true"
        android:translationZ="10dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_width="50dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_iconRight"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_eye_off"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:tint="@color/black" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rv_selectInp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bkg_editext"
            android:gravity="center_vertical"
            android:hint="Hint Select"
            android:minHeight="40dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="#043238"
            android:textColorHint="#33043238"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />
        <ImageView
            android:id="@+id/iv_iconSelect"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_drop_down_24"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:tint="@color/black" />
    </RelativeLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_counter"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/primary"
        android:textSize="11sp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>